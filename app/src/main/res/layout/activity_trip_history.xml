<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TripHistory">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lastBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/trip_banner_background"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tripHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Trip History"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/icBike"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_bike"
            app:layout_constraintTop_toBottomOf="@+id/tripHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textLayout"
            app:tint="@color/white" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textLayout"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintStart_toEndOf="@id/icBike"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icBike"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textLastRide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Ride:"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/textDistanceTravelled"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/textDistanceTravelled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance Travelled"
                app:layout_constraintTop_toBottomOf="@+id/textLastRide"
                app:layout_constraintBottom_toTopOf="@+id/distance"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 KM"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textDistanceTravelled"
                app:layout_constraintBottom_toTopOf="@+id/textFuel"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textFuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance Travelled"
                app:layout_constraintTop_toBottomOf="@+id/distance"
                app:layout_constraintBottom_toTopOf="@+id/fuel"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 KM/L"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/textFuel"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        app:itemIconSize="30dp"
        app:menu="@menu/navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:backgroundTint="@color/color_bg"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationMenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>